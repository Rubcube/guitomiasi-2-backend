{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/@types/external"],
    "target": "es6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "types/*": ["@types/*"],
      "controllers/*": ["controllers/*"],
      "models/*": ["models/*"],
      "routes/*": ["routes/*"],
      "dtos/*": ["dtos/*"],
      "services/*": ["services/*"],
      "zodTypes/*": ["zodTypes/*"],
      "handlers/*": ["handlers/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
