{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TypeScript: watch in workspace folder",
      "type": "shell",
      "command": "./node_modules/.bin/tsc",
      "isBackground": true,
      "args": ["--watch", "--noEmit", "--project", "${workspaceFolder}"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "never",
        "echo": false,
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": "$tsc-watch",
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "ESLint: watch in workspace folder",
      "type": "shell",
      "problemMatcher": ["$eslint-stylish"],
      "command": "yarn",
      "args": ["lint"],
      "presentation": {
        "reveal": "never",
        "echo": false,
        "focus": false,
        "panel": "dedicated"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "options": {
        "configFile": ".eslintrc.js",
        "ignorePath": ".eslintignore"
      }
    }
  ]
}
